<div class="container">
  <% @posts.each do |post| %>
  <div class="post_wrapper">
    <h2 class="title"><%= link_to post.title.capitalize, post %></h2>
    <p class="date"><%= post.created_at.strftime("%B, %d, %Y")%></p>
    <p class="date"><%= truncate(post.body, length: 15)%></p>

  </div>
  <hr>
  <% end %>

</div>
